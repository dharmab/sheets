<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:app='urn:import:com.dharmab.sheets.client.widgets'>
    <g:HTMLPanel>
        <g:Label text="Character Name"/>
        <g:TextBox ui:field="name"/>
        <g:Label text="Class"/>
        <g:Label text="Level"/>
        <app:IntegerSpinner ui:field="level"/>
        <g:TextBox ui:field="characterClass"/>
        <g:Label text="Background"/>
        <g:TextBox ui:field="background"/>
        <g:Label text="Race"/>
        <g:TextBox ui:field="race"/>
        <g:Label text="Experience Points"/>
        <app:IntegerSpinner ui:field="experiencePoints"/>
    </g:HTMLPanel>
</ui:UiBinder>